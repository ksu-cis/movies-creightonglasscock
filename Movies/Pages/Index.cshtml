@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Movies</h1>

<form method="post">
    <input type="text" name="search" />

    <label>
        <input type="checkbox" value="G" />
        Rated G
    </label>
    <label>
        <input type="checkbox" value="PG" />
        Rated PG
    </label>
    <label>
        <input type="checkbox" value="PG-13" />
        Rated PG-13
    </label>
    <label>
        <input type="checkbox" value="M" />
        Rated M
    </label>
    <label>
        <input type="checkbox" value="R" />
        Rated R
    </label>
    <label>
        <input type="checkbox" value="NC-17" />
        Rated NC-17
    </label>

    <input type="submit" name="Search" />
</form>

@foreach(Movie movie in @Model.MovieDatabase.All)
{
<div class="movie-entry">
    <h2>@movie.Title (@movie.Release_Year)</h2>
    @if (@movie.Major_Genre != null)
    {
        <div class="genre">@movie.Major_Genre</div>
    }
    @if (@movie.MPAA_Rating != null)
    {
        <div class="rating">Rated @movie.MPAA_Rating</div>
    }
    @if (@movie.Director != null)
    {
        <div class="director">Directed by @movie.Director</div>
    }
    @if (@movie.IMDB_Rating != null)
    {
        <div class="ratings"> <div><span> IMDB:  </span><h3>@movie.IMDB_Rating/10</h3></div></div>
    }
    @if (@movie.Rotten_Tomatoes_Rating != null)
    {
        <div class="ratings"> <div><span> Rotten Tomatoes:  </span><h3>@movie.Rotten_Tomatoes_Rating%</h3></div></div>
    }
</div>

}
